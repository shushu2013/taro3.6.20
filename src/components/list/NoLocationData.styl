
.no-location-data-component
  height 100%
  min-height 300PX
  overflow hidden
  flex 1
  flex-shrink 0
  display flex
  flex-direction column
  justify-content center
  align-items center

  .no-data-component
    flex 0
    min-height 194PX

  .location-tips
    margin-top 6PX
    display flex
    flex-direction row
    align-items center
    font-size 12PX
    color #999
    line-height 1

  .location-btn
    display flex
    justify-content center
    align-items center
    font-size 12PX
    margin-left 10PX
    border 1PX solid #999
    padding 2PX 4PX
    border-radius 4PX
